*
  box-sizing: border-box

bg(url, rpx = no-repeat, size = cover, position = center center)
  background-image url
  background-repeat rpx
  background-size size
  background-position position

flex-column(jc=flex-start)
  display flex
  flex-direction column 
  align-items center
  justify-content jc

flex-between()
  display flex
  justify-content space-between
  align-items center
  
flex-start()
  display flex
  justify-content flex-start
  align-items center

flex-list()
  display flex
  justify-content flex-start
  align-content flex-start
  flex-wrap wrap

flex-center()
  display flex
  align-items center
  justify-content center
