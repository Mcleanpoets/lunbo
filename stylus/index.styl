@import "common_mixin.styl"
@import "reset.styl"

// 最外层
.container
  width 100%
  height 100%
  overflow hidden
  position relative
  .operator
    position absolute
    width 100%
    left 0
    top 50%
    transform translateY(-50%)
    z-index 10
    padding: 0 25px;
    flex-between()
    >a
      padding 50px
      border-radius 50%
      background-color: rgba(255,255,255,0.5)
      transition opacity 0.5s ease-in-out
      flex-center()
      &:active
        background-color: rgba(255,255,255,1)
        box-shadow: 0 0 10px 10px #89c7da;
    .button-prev
      bg("../images/left.png",no-repeat,40%)
    .button-next
      bg("../images/right.png",no-repeat,40%)
    .hide
      opacity 0
  .content-box
    width 200%
    height 100%
    display flex
    transition transform 2s ease-in-out
    transform translateX(0)
    background-color #000
    .swiper-container
      margin 0
      width 50%
      height 100%
      .swiper-slide
        flex-center()
        img
          width 100%
    .video-container
      width 50%
      height 100%
      flex-center()